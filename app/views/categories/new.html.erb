<html>
	<div class="container">
	<center><h2 class="text-danger">Category</h2></center>
	<hr/>
	 <br/><br/>
	
	
	<div class="form-horizontal">
		<%= form_for @category do |c| %>

			<div class="form-group">
				<%= c.label :Category_Name,class:"control-label col-sm-4"%>
			<div class="col-sm-4">
				<%= c.text_field :name,class:"form-control",id:"categoryid"%>
				<div id="category"></div>
			</div>
			</div>

			

			<div class="form-group">
				<%= c.submit "Save Category",class:"btn btn-sm btn-info col-sm-offset-4",id:"buttonid"%><div id="button">
			</div>
		<% end %><br/>
	<%= link_to "All Categories",categories_path,class:"btn btn-sm btn-info col-sm-offset-4"%>
	</div>

	<% if @category.errors.present? %>
		    <div id="error_explanation">
		      <h3 class="text-danger">
		        <%= pluralize(@category.errors.count, "error") %> prohibited
		        this article from being saved:
		      </h3>
		      <ul>
		        <% @category.errors.full_messages.each do |msg| %>
		          <div class="alert alert-danger">
		          	<li><%= msg %></li>
		          </div>
		        <% end %>
		      </ul>
		    </div>
  		<% end %>

	</div>
	</html>

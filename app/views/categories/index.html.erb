<div class="container">
<center><h2 class="text-danger">Total Categories</h2></center>
<hr/>

<h3 class="text-success">Categories:</h3>
<% @category.each do |c| %>
	
	<h4><span class="text-success"><%= c.id%> .</span>
	<%= c.name %></h4>
	<%= link_to "Edit", edit_category_path(c) %> | <%= link_to "Delete",c,method: :delete,data:{confirm: "Are sure to delete?"} %><br/>

<% end %><br/>
<%= link_to "New Category",new_category_path,class:"btn btn-sm btn-info " %>
</div>
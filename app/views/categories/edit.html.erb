<html>
	<div class="container">
	<center><h2 class="text-danger">Article</h2></center>
	<hr/>
	 <br/><br/>
	
	
	<div class="form-horizontal">
		<%= form_for @category do |c| %>

			<div class="form-group">
				<%= c.label :Category_Name,class:"control-label col-sm-4"%>
			<div class="col-sm-4">
				<%= c.text_field :name,class:"form-control"%>
			</div>
			</div>

			<div class="form-group">
				<%= c.submit "Save Category",class:"btn btn-sm btn-info col-sm-offset-4"%>
			</div>
		<% end %>
	<%= link_to "All Categories",categories_path,class:"btn btn-sm btn-info col-sm-offset-4"%>
	</div>
	</div>
	</html>
